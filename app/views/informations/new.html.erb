<%= render "devise/shared/header" %>

<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規投稿</h2>

        <%= form_with model: @information, url: informations_path, local: true do |f| %>

          <div class="field">
            <%= f.label :title, "タイトル" %><br />
            <%= f.text_field :title, id:"title" %>
          </div>

          <div class="field">
            <%= f.label :content, "内容" %><br />
            <%= f.text_area :content, id:"content", class: :new_content %>
          </div>

          <div class="field">
            <%= f.label :image, "画像のアップロード" %><br />
            <%= f.file_field :image, id:"image" %>
          </div>

          <div class="actions">
            <%= f.submit "新規投稿", class: :form__btn  %>
          </div>

          <%= link_to :back do %>
          <button>戻る</button>
          <% end %>
        <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/footer" %>