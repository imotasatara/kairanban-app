<%= render "devise/shared/header" %>

<main class="main">
<% if user_signed_in? %>
  <div class="kairanban-main">
      <% @informations.each do |information| %>
        <div class='information-lists'>
          <div class="list-title">
            <%= information.title %>
          </div>
          <div class="list">
            <%= information.content %>
          </div>
          <%= image_tag information.image.variant(resize: '180x240'), class: "information-img" if information.image.attached? %>
          <div class="date">
            <%= information.created_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
      <% end %>
  </div>
  <div class="calender">
    <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>
      <% events.each do |event| %>
        <div>
          <%= event.title %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
</main>

<%= render "devise/shared/footer" %>